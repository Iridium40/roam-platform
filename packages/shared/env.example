# =============================================================================
# ROAM Platform - Centralized Environment Configuration
# =============================================================================
# This file contains all environment variables used across the ROAM platform.
# Copy this file to .env and fill in your actual values.
# =============================================================================

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL (required)
VITE_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anonymous/public key (required)
VITE_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Your Supabase service role key (required for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Your Stripe publishable key (required)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Your Stripe secret key (required for server-side operations)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Your Stripe webhook secret (optional, for webhook verification)
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# TWILIO CONFIGURATION
# =============================================================================
# Your Twilio Account SID (required)
VITE_TWILIO_ACCOUNT_SID=AC_your-twilio-account-sid

# Your Twilio Auth Token (required)
VITE_TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Your Twilio Conversations Service SID (required)
VITE_TWILIO_CONVERSATIONS_SERVICE_SID=IS_your-conversations-service-sid

# Your Twilio phone number for SMS (optional)
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# EMAIL CONFIGURATION (RESEND)
# =============================================================================
# Your Resend API key (required)
RESEND_API_KEY=re_your-resend-api-key

# =============================================================================
# PLAID CONFIGURATION (OPTIONAL)
# =============================================================================
# Your Plaid Client ID (optional, for banking integration)
PLAID_CLIENT_ID=your-plaid-client-id

# Your Plaid Secret (optional, for banking integration)
PLAID_SECRET=your-plaid-secret

# Plaid environment (sandbox, development, production)
PLAID_ENV=sandbox

# =============================================================================
# GOOGLE CONFIGURATION (OPTIONAL)
# =============================================================================
# Your Google Maps API key (optional)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Your Google OAuth Client ID (optional)
VITE_GOOGLE_CLIENT_ID=your-google-client-id

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# Your app URL (optional, for redirects)
VITE_APP_URL=https://your-app-domain.com

# Your API base URL (optional)
VITE_API_BASE_URL=https://api.your-app-domain.com

# App version (optional)
VITE_APP_VERSION=1.0.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable real-time features (optional)
VITE_ENABLE_REAL_TIME=false

# Enable analytics (optional)
VITE_ENABLE_ANALYTICS=false

# Enable debug mode (optional)
VITE_ENABLE_DEBUG_MODE=false

# Enable performance monitoring (optional)
VITE_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# JWT secret for token signing (required)
JWT_SECRET=your-jwt-secret-key

# =============================================================================
# DEVELOPMENT OVERRIDES (OPTIONAL)
# =============================================================================
# These variables are optional and only used in development
# They provide fallbacks for the main environment variables

# Development JWT secret override
VITE_JWT_SECRET=dev-jwt-secret

# Development Resend API key override
VITE_RESEND_API_KEY=re_dev-resend-api-key

# Development Supabase URL override
VITE_SUPABASE_URL=https://dev-project.supabase.co

# Development Supabase anon key override
VITE_SUPABASE_ANON_KEY=dev-supabase-anon-key

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
# For Vercel deployment:
# 1. Add these variables to your Vercel project settings
# 2. Ensure all required variables are set
# 3. Use VITE_ prefix for client-side variables
# 4. Keep server-side secrets (STRIPE_SECRET_KEY, etc.) private
# =============================================================================
