{
  "name": "roam-provider-app",
  "description": "ROAM Provider App - Business management and provider onboarding platform",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "pkg": {
    "assets": [
      "dist/spa/*"
    ],
    "scripts": [
      "dist/server/**/*.js"
    ]
  },
  "scripts": {
    "dev": "npm run dev:server & npm run dev:client",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "cd ../packages/shared && npm run build && cd ../../roam-provider-app && npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "vite build --config vite.config.server.ts",
    "start": "node dist/server/node-build.mjs",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --run --reporter=verbose",
    "test:integration": "vitest --run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "format.fix": "prettier --write .",
    "format.check": "prettier --check .",
    "typecheck": "echo 'TypeScript checking temporarily disabled'",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint.fix": "eslint . --ext .ts,.tsx --fix",
    "clean": "rm -rf dist node_modules/.cache",
    "prebuild": "npm run clean",
    "postinstall": "echo 'Skipping typecheck in postinstall'",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "performance:analyze": "npm run build && npx vite-bundle-analyzer dist/spa",
    "performance:lighthouse": "npx lighthouse http://localhost:8080 --output=json --output-path=./lighthouse-report.json",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "vercel-build": "npm run build",
    "vercel:dev": "vercel dev",
    "env:pull": "vercel env pull",
    "env:add": "vercel env add"
  },
  "dependencies": {
    "@roam/shared": "file:../packages/shared",
    "@stripe/stripe-js": "^7.8.0",
    "@supabase/supabase-js": "^2.55.0",
    "@twilio/conversations": "^2.6.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@vercel/kv": "^3.0.0",
    "@vercel/node": "^2.3.0",
    "ai": "^5.0.76",
    "buffer-from": "^1.1.2",
    "dotenv": "^17.2.0",
    "edge-runtime": "^4.0.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "plaid": "^38.0.0",
    "react-plaid-link": "^4.1.1",
    "react-qr-code": "^2.0.18",
    "resend": "^6.0.1",
    "stripe": "^13.4.0",
    "twilio": "^5.10.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-aspect-ratio": "^1.1.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-context-menu": "^2.2.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-hover-card": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-menubar": "^1.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@swc/core": "^1.11.24",
    "@tailwindcss/typography": "^0.5.15",
    "@tanstack/react-query": "^5.56.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "globals": "^15.9.0",
    "input-otp": "^1.2.4",
    "lucide-react": "^0.462.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-resizable-panels": "^2.1.3",
    "react-router-dom": "^6.26.2",
    "recharts": "^2.12.7",
    "serverless-http": "^3.2.0",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.11",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.3",
    "typescript": "^5.5.3",
    "vaul": "^0.9.3",
    "vercel": "^25.2.0",
    "vite": "^4.5.0",
    "vitest": "^3.1.4"
  }
}
