{
  "name": "roam-platform",
  "version": "1.0.0",
  "description": "ROAM Platform - Unified marketplace platform with admin, provider, and customer applications",
  "private": true,
  "workspaces": [
    "packages/*",
    "roam-*-app"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "deploy:admin": "cd apps/roam-admin-app && npm run deploy",
    "deploy:provider": "cd apps/roam-provider-app && npm run deploy",
    "deploy:customer": "cd apps/roam-customer-app && npm run deploy",
    "deploy:services": "turbo run deploy --filter=./packages/*",
    "deploy:all": "turbo run deploy",
    "setup": "npm install && npm run build",
    "dev:admin": "cd apps/roam-admin-app && npm run dev",
    "dev:provider": "cd apps/roam-provider-app && npm run dev",
    "dev:customer": "cd roam-customer-app && npm run dev",
    "test:production": "cd production-tests && npm install && npm run test:all",
    "test:smoke": "cd production-tests && npm run test:smoke",
    "test:api": "cd production-tests && npm run test:api",
    "test:e2e": "cd production-tests && npm run test:e2e",
    "monitor": "cd production-tests && npm run monitor",
    "setup:production-tests": "./production-tests/setup.sh"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "prettier": "^3.5.3",
    "turbo": "^1.13.4",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.0.0",
  "overrides": {
    "@rollup/rollup-linux-x64-gnu": "4.13.0",
    "uuid": "^10.0.0",
    "inflight": "npm:inflight-bluebird@^2.0.0",
    "rimraf": "^6.0.0",
    "glob": "^11.0.0"
  },
  "dependencies": {
    "@stripe/stripe-js": "^7.9.0",
    "@twilio/conversations": "^2.6.4",
    "stripe": "^18.5.0",
    "twilio": "^5.10.2"
  }
}
